<%= form_for @sheet do |f| %>
  <%= f.error_messages %>
  <div style="width:"400px">
  <table class="no-zebra">
    <tr style="background:#eef;">
      <td>
        <%= f.label :student_id %><br />
        <%= collection_select(:sheet, :student_id, Student.order('last ASC').all, :id, :name) %>
      </td>
      <td>
        <%= f.label :partner_id %><br />
        <%= collection_select(:sheet, :partner_id, Student.order('last ASC').all, :id, :name) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :experiment_id %><br />
        <%= collection_select(:sheet, :experiment_id, Experiment.all, :id, :title) %>
      </td>
      <td>
        <%= f.label :marker_id %><br />
        <%= collection_select(:sheet, :marker_id, Marker.all, :id, :name,
    {:selected => @sheet.marker_id}) %>
      </td>
    </tr>
  </table>
  </div>

  <div style="float:right;width:400px;">
    <%= f.label "Marks Breakdown" %><br />
    <table class="no-zebra">
      <tr>
        <td> <%= MARK1_CRITERION %></td>
        <td style="text-align:center;"> <%= f.text_field(:mark1, size: 3) %> </td>
      </tr>
      <tr>
        <td> <%= MARK2_CRITERION %></td>
        <td style="text-align:center;"> <%= f.text_field(:mark2, size: 3) %> </td>
      </tr>
      <tr>
        <td> <%= MARK3_CRITERION %></td>
        <td style="text-align:center;"> <%= f.text_field(:mark3, size: 3) %> </td>
      </tr>
      <tr>
        <td> <%= MARK4_CRITERION %></td>
        <td style="text-align:center;"> <%= f.text_field(:mark4, size: 3) %> </td>
      </tr>
    </table>
  </div>


  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<%=request.original_url%>
<table class="pretty">
  <tr>
    <th>Abbr</th>
    <th>Name</th>
    <th># Sheets</th>
    <th>Email</th>
    <th>Scaling</th>
    <th>Admin</th>
  </tr>
  <% for marker in @markers %>
    <tr>
      <td><%= marker.abbr %></td>
      <td><%= "#{marker.last},#{marker.first}" %></td>
      <td><%= marker.sheets.count %></td>
      <td><%= marker.email %></td>
      <td><%= marker.scaling %></td>
      <td><%= marker.admin ? "Yes" : "No" %></td>
      <td><%= link_to "Show", marker %></td>
      <td><%= link_to "Edit", edit_marker_path(marker) %></td>
      <td><%= link_to "Destroy", marker, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Marker", new_marker_path %></p>
